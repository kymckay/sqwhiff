{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Bazel: Build Project",
			"command": "bazel",
			"args": [
				"build",
				"...",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
        {
            "type": "cppbuild",
            "label": "Bazel: Build Debug",
            "command": "bazel",
            "args": [
                "build",
                "...",
                "--compilation_mode=dbg"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "Bazel: Test Project",
            "command": "bazel",
            "args": [
                "test",
                "//test/...",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "test"
        }
	]
}